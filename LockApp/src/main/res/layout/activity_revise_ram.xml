<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzwc.intelligent.lock.model.activity.InstallLockActivity">

    <include layout="@layout/layout_head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.amap.api.maps.MapView
            android:id="@+id/install_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base300dp"></com.amap.api.maps.MapView>

        <ImageView
            android:id="@+id/iv_install_center_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="28dp"
            android:src="@mipmap/ic_position" />
    </RelativeLayout>

    <ImageView
        style="@style/LineStyle"
        android:layout_marginTop="@dimen/base15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView"
            style="@style/install_text"
            android:text="@string/tv_install_location" />

        <EditText
            android:id="@+id/et_install_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/tv_install_location_please"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />


    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"


        android:background="@color/white">

        <TextView
            android:id="@+id/textView3"
            style="@style/install_text"
            android:text="@string/tv_install_name" />

        <EditText
            android:id="@+id/et_install_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/tv_install_name_please"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />


    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

    <RelativeLayout
        android:id="@+id/rl_ring_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"

        android:background="@color/white">

        <TextView
            android:id="@+id/textView2"
            style="@style/install_text"
            android:text="@string/tv_install_mac" />

        <EditText
            android:id="@+id/et_install_mac"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/tv_install_mac_please"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />

        <ImageView

            android:id="@+id/et_install_zxing"
            style="@style/install_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_zxing" />
    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

    <RelativeLayout
        android:id="@+id/rl_ring_location2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"

        android:background="@color/white">

        <TextView
            android:id="@+id/textView4"
            style="@style/install_text"
            android:text="@string/tv_install_mac" />

        <EditText
            android:id="@+id/et_install_mac2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/tv_install_mac_please"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />

        <ImageView

            android:id="@+id/et_install_zxing2"
            style="@style/install_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_zxing" />
    </RelativeLayout>


</LinearLayout>
