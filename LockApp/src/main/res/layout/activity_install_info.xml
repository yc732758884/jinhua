<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.amap.api.maps.MapView
            android:id="@+id/info_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base200dp"></com.amap.api.maps.MapView>

        <ImageView
            android:id="@+id/iv_info_center_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="28dp"
            android:src="@mipmap/ic_position" />
    </RelativeLayout>

    <ImageView
        style="@style/LineStyle"
        android:layout_marginTop="@dimen/base15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView"
            style="@style/install_text"
            android:text="@string/tv_info_ram_name" />

        <EditText
            android:id="@+id/et_info_ram_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />


    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"


        android:background="@color/white">

        <TextView
            android:id="@+id/textView4"
            style="@style/install_text"
            android:text="@string/tv_info_ram_location" />

        <EditText
            android:id="@+id/et_info_ram_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />


    </RelativeLayout>

    <ImageView style="@style/LineStyle" /> <ImageView style="@style/LineStyle" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"


        android:background="@color/white">

        <TextView
            android:id="@+id/textView3"
            style="@style/install_text"
            android:text="@string/tv_info_ram_time" />

        <TextView
            android:id="@+id/tv_info_ram_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />


    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

</LinearLayout>