<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontBg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".model.activity.SetPasswordActivity">

    <include layout="@layout/layout_head"/>

    <ImageView
        style="@style/LineStyle"/>

    <ImageView
        style="@style/LineStyle"
        android:layout_marginTop="@dimen/base15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_weight="1.5"
            android:gravity="left|center"
            android:text="新密码"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/base15dp"
            />

        <EditText
            android:id="@+id/et_set_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base5dp"
            android:layout_weight="4"
            android:background="@null"
            android:hint="请输入6-12位数字字母组合"

            android:maxLength="12"
            android:textColorHint="@color/text_color_gray"
            android:textSize="@dimen/base15dp"
            />

        <ImageView
            android:id="@+id/iv_set_eye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="end|center_vertical"
            android:src="@mipmap/icon_login_eye_close"
            android:layout_marginRight="@dimen/base15dp"
            android:padding="@dimen/base5dp"
            />

    </LinearLayout>

    <ImageView
        style="@style/LineStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"
        android:background="@color/white"

        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_weight="1.5"
            android:gravity="left|center"
            android:text="确认密码"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/base15dp"
            />

        <EditText
            android:id="@+id/et_set_ps"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base5dp"
            android:layout_weight="4"
            android:background="@null"
            android:hint="请再输入一次密码"
            android:maxLength="12"
            android:textColorHint="@color/text_color_gray"
            android:textSize="@dimen/base15dp"
            />
        <ImageView
            android:id="@+id/iv_set_eyes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="end|center_vertical"
            android:src="@mipmap/icon_login_eye_close"
            android:layout_marginRight="@dimen/base15dp"
            android:padding="@dimen/base5dp"
            />

    </LinearLayout>

    <ImageView
        style="@style/LineStyle"/>

    <Button
        android:id="@+id/bt_set_sure"
        style="@style/app_button"
        android:background="@drawable/btn_background_selector"
        android:text="确认修改"

        />
</LinearLayout>
