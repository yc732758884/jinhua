<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/lh"
        layout="@layout/layout_head" />

    <View
        android:background="@color/color_E5E5E5"
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base20dp"
        android:layout_below="@+id/lh" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/v"
        android:background="@color/bg_lucency_" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v"
        android:padding="@dimen/base10dp"
        android:text="@string/warning_type"
        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/tv_warning_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v"
        android:layout_marginLeft="@dimen/base10dp"
        android:layout_toRightOf="@+id/tv_type"
        android:padding="@dimen/base10dp" />

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/tv_type"
        android:background="@color/bg_lucency_" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v2"
        android:padding="@dimen/base10dp"
        android:text="@string/cabinet_name"
        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/tv_cabinet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v2"
        android:layout_marginLeft="@dimen/base10dp"
        android:layout_toRightOf="@+id/tv_name"
        android:padding="@dimen/base10dp" />

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/tv_name"
        android:background="@color/bg_lucency_" />

    <TextView
        android:id="@+id/tv_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v3"
        android:padding="@dimen/base10dp"
        android:text="@string/warning_lock_mac"
        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/tv_warning_lock_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v3"
        android:layout_marginLeft="@dimen/base10dp"
        android:layout_toRightOf="@+id/tv_mac"
        android:padding="@dimen/base10dp" />

    <View
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/tv_mac"
        android:background="@color/bg_lucency_" />

    <View
        android:background="@color/color_E5E5E5"
        android:id="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base25dp"
        android:layout_below="@+id/v4" />

    <View
        android:id="@+id/v6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/v5"
        android:background="@color/bg_lucency_" />

    <TextView
        android:id="@+id/tv_summarize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v6"
        android:padding="@dimen/base10dp"
        android:text="@string/warning_summarize"
        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/tv_warning_summarize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v6"
        android:layout_marginLeft="@dimen/base10dp"
        android:layout_toRightOf="@+id/tv_summarize"
        android:padding="@dimen/base10dp" />

    <View
        android:id="@+id/v7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/tv_summarize"
        android:background="@color/bg_lucency_" />

    <TextView
        android:id="@+id/tv_particulars"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base150dp"
        android:layout_below="@+id/v7"
        android:padding="@dimen/base10dp"
        android:text="@string/warning_particulars"
        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/tv_warning_particulars"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base150dp"
        android:layout_below="@+id/v7"
        android:layout_marginLeft="@dimen/base10dp"
        android:layout_toRightOf="@+id/tv_particulars"
        android:padding="@dimen/base10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_alignBottom="@+id/tv_particulars"
        android:layout_alignParentStart="true"
        android:background="@color/bg_lucency_" />
</RelativeLayout>