<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/supplier_list_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/supplier_list_one_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/base15dp" />

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="@dimen/base7dp"
                android:layout_height="@dimen/base7dp"
                android:layout_marginLeft="@dimen/base3dp"
                android:layout_marginTop="@dimen/base2dp"
                android:src="@mipmap/icon_arrow_down" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/base1dp"
            android:layout_height="@dimen/base25dp"
            android:layout_gravity="center_vertical"
            android:background="@color/lineColor" />

        <LinearLayout
            android:id="@+id/supplier_list_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/supplier_list_two_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/base15dp" />

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="@dimen/base7dp"
                android:layout_height="@dimen/base7dp"
                android:layout_marginLeft="@dimen/base3dp"
                android:layout_marginTop="@dimen/base2dp"
                android:src="@mipmap/icon_arrow_down" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/base1dp"
            android:layout_height="@dimen/base25dp"
            android:layout_gravity="center_vertical"
            android:background="@color/lineColor" />

        <LinearLayout
            android:id="@+id/supplier_list_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/supplier_list_three_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/base15dp" />

            <ImageView
                android:id="@+id/iv_three"
                android:layout_width="@dimen/base7dp"
                android:layout_height="@dimen/base7dp"
                android:layout_marginLeft="@dimen/base3dp"
                android:layout_marginTop="@dimen/base2dp"
                android:src="@mipmap/icon_arrow_down" />
        </LinearLayout>
    </LinearLayout>

    <ImageView style="@style/LineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base40dp"
        android:background="@color/text_color_theme_blue">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/tv_number"
            android:layout_height="match_parent"
            android:padding="@dimen/base5dp"
            android:textSize="@dimen/base15dp"
            android:textColor="@color/text_color_white" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/tv_collector_number"
            android:layout_height="match_parent"
            android:padding="@dimen/base5dp"
            android:textSize="@dimen/base15dp"
            android:textColor="@color/text_color_white" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_electricity"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/base5dp"
            android:textSize="@dimen/base15dp"
            android:textColor="@color/text_color_white" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_voltage"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/base5dp"
            android:textSize="@dimen/base15dp"
            android:textColor="@color/text_color_white" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout-->
            <!--android:id="@+id/refresh"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_below="@+id/ic_header"-->
            <!--app:layout_behavior="@string/appbar_scrolling_view_behavior">-->


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_equipment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff" />
        <!--</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>-->

        <View
            android:id="@+id/bg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_lucency"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/supplier_list_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:visibility="gone" />

    </FrameLayout>
    <!--<ProgressBar-->
    <!--android:id="@+id/progress"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:indeterminateDrawable="@drawable/shape_progress"-->
    <!--android:indeterminateDuration="1000" />-->


</LinearLayout>