<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base48dp"
    android:background="@color/text_color_theme_blue">


    <ImageView
        android:id="@+id/iv_title_return"
        android:layout_width="@dimen/base50dp"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:src="@mipmap/ic_return"
        android:visibility="gone" />

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_marginEnd="@dimen/base60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginRight="@dimen/base10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_warning_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/warning_time"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base17dp"

                    />

                <ImageView
                    android:id="@+id/iv_warning_line_left"
                    style="@style/LineStyle"
                    android:layout_height="@dimen/base2dp"
                    android:layout_marginTop="@dimen/base5dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_warning_history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/warning_location"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base17dp"

                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_warning_line_right"
                    style="@style/LineStyle"
                    android:layout_height="@dimen/base2dp"
                    android:layout_marginTop="@dimen/base5dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_warning_else"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/warning_else"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base17dp"

                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_warning_else"
                    style="@style/LineStyle"
                    android:layout_height="@dimen/base2dp"
                    android:layout_marginTop="@dimen/base5dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_warning_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="锁未关告警"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base17dp"

                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_warning_close"
                    style="@style/LineStyle"
                    android:layout_height="@dimen/base2dp"
                    android:layout_marginTop="@dimen/base5dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>






    <FrameLayout
        android:layout_width="@dimen/base60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_warning_add"
            android:layout_width="@dimen/base60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/base12dp"
            android:src="@mipmap/add_warning" />


    </FrameLayout>

</RelativeLayout>