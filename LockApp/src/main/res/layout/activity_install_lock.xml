<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzwc.intelligent.lock.model.activity.InstallLockActivity">

    <include layout="@layout/layout_head" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.amap.api.maps.MapView
            android:id="@+id/install_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base300dp"></com.amap.api.maps.MapView>

        <ImageView
            android:id="@+id/iv_install_center_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="28dp"
            android:src="@mipmap/ic_position" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                style="@style/LineStyle"
                android:layout_marginTop="@dimen/base15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base44dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/textView"
                    style="@style/install_text"
                    android:text="@string/tv_install_location" />

                <EditText
                    android:id="@+id/et_install_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBaseline="@+id/textView"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_marginLeft="@dimen/base20dp"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_toRightOf="@+id/textView"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/tv_install_location_please"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/base15dp" />


            </RelativeLayout>

            <ImageView style="@style/LineStyle" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/base44dp"


                android:background="@color/white">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/install_text"
                    android:text="@string/tv_install_name" />

                <EditText
                    android:id="@+id/et_install_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_marginLeft="@dimen/base20dp"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_toRightOf="@+id/textView3"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/tv_install_name_please"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/base15dp" />


            </RelativeLayout>

            <ImageView style="@style/LineStyle" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_install_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:descendantFocusability="afterDescendants"
                android:fastScrollEnabled="false">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/attention_install"
                    android:layout_width="@dimen/base16dp"
                    android:layout_height="@dimen/base16dp" />

                <TextView

                    android:id="@+id/tv_install_lock_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base15dp"
                android:gravity="center">


                <ImageView
                       android:visibility="invisible"
                    android:id="@+id/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/base10dp"
                    android:src="@mipmap/ic_add_gray"
                    android:text="添加"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="111dp"
                    android:layout_toEndOf="@+id/btn_add"
                    android:layout_weight="1"
                    android:text="删除"
                    android:textAllCaps="false"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="继续添加智慧锁"
                android:visibility="gone" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>
