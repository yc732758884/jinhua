<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ly_background_color"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />

    <RelativeLayout
        android:id="@+id/rl_set_first"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"
        android:layout_marginTop="@dimen/base10dp"
        android:background="@color/white">

        <TextView
            style="@style/install_text_first"
            android:text="修改密码" />

        <ImageView style="@style/install_image" />
    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

    <RelativeLayout
        android:id="@+id/rl_set_clear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"
        android:background="@color/white">

        <TextView
            style="@style/install_text_first"
            android:text="清除缓存" />

        <ImageView style="@style/install_image" />
    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

    <RelativeLayout
        android:id="@+id/rl_set_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"
        android:layout_marginTop="@dimen/base5dp"
        android:background="@color/white">

        <TextView
            style="@style/install_text"
            android:text="版本号" />


        <LinearLayout
            style="@style/install_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_set_version"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/base3dp"
                android:gravity="center"
                android:text="1.0"
                android:textSize="@dimen/base14dp" />

            <ImageView
                android:id="@+id/iv_version_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:src="@drawable/back_circle_red_home"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

    <TextView
        android:id="@+id/tv_set_login_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"
        android:layout_marginTop="@dimen/base10dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/text_red"
        android:textSize="@dimen/base15dp" />
</LinearLayout>
