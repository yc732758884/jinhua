<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_border_radius">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="附近智慧锁"
        android:textColor="@color/color_black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/view"
        style="@style/LineStyle"
        android:layout_below="@+id/tv_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view" />

    <!--  <TextView
          android:layout_marginLeft="@dimen/base20dp"
          android:id="@+id/tv_mac_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/view"
          android:padding="10dp"
          android:textColor="@color/color_black"
          android:textSize="15sp" />

      <TextView

          android:id="@+id/tv_mac_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_mac_1"
          android:layout_marginLeft="@dimen/base20dp"
          android:padding="10dp"
          android:textColor="@color/color_black"
          android:textSize="15sp" />
  -->

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/base220dp"
        android:gravity="center"
        android:padding="@dimen/base10dp"
        android:text="正在搜索...."
        android:textColor="@color/text_color_theme_blue"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/base250dp"
        android:gravity="center"
        android:padding="@dimen/base10dp"
        android:text="@string/confirm"
        android:textColor="@color/color_black"
        android:textSize="15dp" />


</RelativeLayout>