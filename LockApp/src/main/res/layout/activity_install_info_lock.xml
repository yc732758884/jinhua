<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.amap.api.maps.MapView
            android:id="@+id/info_lock_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base300dp"/>

        <ImageView
            android:id="@+id/iv_info_center_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="28dp"
            android:src="@mipmap/ic_position" />
    </RelativeLayout>

    <ImageView
        style="@style/LineStyle"
        android:layout_marginTop="@dimen/base15dp" />


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"


        android:background="@color/white">

        <TextView
            android:id="@+id/textView4"
            style="@style/install_text"
            android:text="@string/tv_info_lock_location" />

        <EditText
            android:id="@+id/et_info_lock_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />


    </RelativeLayout>


    <ImageView style="@style/LineStyle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView"
            style="@style/install_text"
            android:text="@string/tv_info_lock_name" />

        <EditText
            android:id="@+id/et_info_lock_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />


    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"


        android:background="@color/white">

        <TextView
            android:id="@+id/textView5"
            style="@style/install_text"
            android:text="@string/tv_info_lock_mac" />

        <TextView
            android:id="@+id/tv_info_lock_mac"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />

        <ImageView

            android:id="@+id/iv_lock_info_zxing"
            style="@style/install_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_zxing"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp"


        android:background="@color/white">

        <TextView
            android:id="@+id/textView3"
            style="@style/install_text"
            android:text="@string/tv_info_lock_time" />

        <TextView
            android:id="@+id/tv_info_lock_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginLeft="@dimen/base20dp"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base15dp" />


    </RelativeLayout>

    <ImageView style="@style/LineStyle" />

</LinearLayout>