<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ly_background_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <include layout="@layout/layout_head_search" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.amap.api.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></com.amap.api.maps.MapView>

                <ImageView
                    android:id="@+id/iv_center_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingBottom="28dp"
                    android:src="@mipmap/ic_position" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_navigation_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_navigation_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#60000000" />

            <ImageView
                android:id="@+id/iv_navigation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#15AFAFAF"
                android:paddingRight="@dimen/base10dp"
                android:paddingLeft="@dimen/base10dp"
                android:src="@mipmap/ic_navigation" />

        </LinearLayout>
    </FrameLayout>


</LinearLayout>